{
  "manifest_version": 3,
  "name": "Vertex AI Prompter",
  "description": "Simple prompt chrome extension using Vertex AI",
  "version": "1.0",
  "content_scripts": [
    {
      "matches":[
        "<all_urls>"
      ],
      "js": [
        "src/utils.js",
        "src/case-scraper.js",
        "src/shadow-dom.js",
        "scripts/content.js"
      ],
      "run_at": "document_idle",
      "css": ["popup/styles.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "popup/landing.html",
        "popup/styles.css",
        "assets/images/icon-128.png",
        "assets/images/passed-24px.png",
        "assets/images/failed-24px.png",
        "assets/images/suggestion-24px.png",
        "assets/images/warning-24px.png"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "host_permissions":[
    "http://localhost:8888/*",
    "https://sherlock-ai-service-189965926617.us-central1.run.app/api/v1/prompt/default"
  ],
  "permissions": [
    "storage",
    "windows",
    "activeTab",
    "tabs",
    "identity"
  ],
  "action":{
    "default_icon": {
      "128": "assets/images/icon-128.png"
    }
  },
  "oauth2": {
    "client_id": "189965926617-0q0hu88kporp7fe0iuo2g0210p3qh7lk.apps.googleusercontent.com",
    "scopes":["openid", "email"]
  }
}